<h1>設定ページ</h1>

<!-- ユーザー一覧 -->
<h2>ユーザー一覧</h2>
<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>誕生日</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
  
  <% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.birthday %></td>
    <td>
      <%= link_to '編集', edit_user_path(user), class: 'btn btn-primary' %>
      <%= link_to '詳細', user_path(user), class: 'btn btn-info' %> <!-- 詳細リンクを追加 -->
    </td>
  </tr>
<% end %>

<!-- 新規ユーザー登録フォーム -->
<h2>新規ユーザー登録</h2>
<%= form_with model: @user, url: users_path, local: true do |form| %>
  <div>
    <%= form.label :name, "名前" %>
    <%= form.text_field :name %>
  </div>
  
  <div>
    <%= form.label :birthday, "誕生日" %>
    <%= form.date_select :birthday %>
  </div>
  <div>
    <%= form.submit "登録" %>
  </div>
<% end %>
